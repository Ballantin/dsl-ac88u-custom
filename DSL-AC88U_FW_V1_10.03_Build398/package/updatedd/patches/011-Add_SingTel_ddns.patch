+print_version(FILE *fp)
+{
+        
+	(void)fprintf(fp,
+		      "\n" PNAME " plugin for www.singtel.com, version 1.0,\n"
+		      "Copyright (C) 2015 Arcadyan Corp.\n\n"
+
+		      "This is free software, and you are welcome to redistribute it\n"
+		      "under certain conditions; see the source for copying conditions.\n"
+		      "There is NO warranty; not even for MERCHANTABILITY or FITNESS\n"
+		      "FOR A PARTICULAR PURPOSE.\n\n");
+
+	return;
+        
+}
+
+static void
+ret_msg(int mode, const char *fmt, ...)
+{
+        
+	va_list az;
+        
+	va_start(az, fmt);
+	(void)vs_warn(ret_msg_buf, BUFSIZE, mode, fmt, az);
+	va_end(az);
+        
+	return;
+        
+}
+
+int
+dyndns(int argc, char *argv[])
+{
+        
+	struct arguments args;
+	int s, ret;
+	const char *ptr;
+
+	(void)memset(&args, 0, sizeof(struct arguments));
+	
+	if(get_flags(&args, argc, argv) != RET_OK) {
+		return RET_WRONG_USAGE;
+	}
+        
+	s = get_connection(DYNDNSHOST, PORT, &ptr);
+	if(s == -1) {
+		ret_msg(HERR, "%s: %s", ptr, DYNDNSHOST);
+		ret = RET_WARNING;
+	} else {
+		
+		/* -- SSL init -- */
+		SSL_library_init();
+		SSL_load_error_strings();
+		
+		if ((ctx = SSL_CTX_new(SSLv23_client_method())) == NULL) {
+			ret_msg(PERR, "SingTel ddns: SSL_CTX_new fail");
+			return  RET_WARNING;
+		}
+		
+		if ((ssl = SSL_new(ctx)) == NULL) {
+			ret_msg(PERR, "SingTel ddns: SSL_new fail ");
+			return RET_WARNING;
+		}
+		
+		if ((ret = SSL_set_fd(ssl, s)) == 0) {
+			ret_msg(PERR, "SingTel ddns: SSL_set_fd fail");
+			return RET_WARNING;
+		}
+
+		RAND_poll();
+
+		while (RAND_status() == 0) {
+			unsigned short rand_ret = rand() % 65536;
+			RAND_seed(&rand_ret, sizeof(rand_ret));
+		}
+		
+		if ((ret = SSL_connect(ssl)) != 1) {
+			ret_msg(PERR, "SingTel ddns: SSL_connect fail");
+			return RET_WARNING;
+		}
+		/* -- SSL init -- */
+
+		ret = update_dyndns(s, &args);
+		if(ret == RET_OK) {
+			ret = check_server_msg(s, args.hostname);
+		}
+		
+		/* -- SSL end -- */
+		SSL_shutdown(ssl);
+		(void)close(s);
+		SSL_free(ssl);
+		SSL_CTX_free(ctx);
+		ERR_free_strings();
+	}
+        
+	return ret;
+}
+
+static int
+get_flags(struct arguments *args, int argc, char *argv[])
+{
+        
+	int c;
+
+	for(;;) {
+                
+		int option_index = 0;
+		static struct option long_options[] = {
+			{ "ipv4",		1, 0, '4' },
+			{ "ipv6",		1, 0, '6' },
+			{ "help",		0, 0, 'h' },
+			{ "version",		0, 0, 'v' },
+			{ NULL,			0, 0, 0   }
+		};
+                
+		c = getopt_long(argc, argv, "4:6:",
+				long_options, &option_index);
+                
+		if(c == -1) break;
+                
+		switch(c) {
+		case '4':
+			args->ipv4 = optarg;
+			break;
+		case '6':
+			args->ipv6 = optarg;
+			break;
+		case 'h':
+			print_usage(argv[ARGV_PNAME], stdout);
+			exit(EXIT_SUCCESS);
+		case 'v':
+			print_version(stdout);
+			exit(EXIT_SUCCESS);
+		}
+	}
+
+	switch(argc-optind) {
+        default:
+		ret_msg(NONE, "wrong usage");
+		return RET_WRONG_USAGE;
+                
+        case 2:
+		args->login = getenv("LOGIN");
+		if(args->login == NULL) {
+			ret_msg(NONE,
+				"environment variable LOGIN is empty");
+			return RET_WRONG_USAGE;
+		}
+		break;
+        case 3:
+		args->login = argv[ARGV_LOGIN];
+	}
+	args->hostname = argv[ARGV_HOSTNAME];
+        
+	return RET_OK;
+        
+}
+
+#define BUFLEN		4096
+#define BUFFREE(name)	BUFLEN - strlen(name)
+
+static int
+update_dyndns(const int s, struct arguments *args)
+{
+
+	char *b64user;
+	char message[BUFLEN];
+        
+	if(strlen(args->login) > 128) {
+		ret_msg(NONE, "username is too long");
+		return RET_ERROR;
+	}
+	b64user = (char *)malloc((2 * strlen(args->login) + 1));
+	if(b64user == NULL) {
+		ret_msg(PERR, "malloc() failed");
+		return RET_WARNING;
+	}
+	(void)memset(b64user, 0, 2 * strlen(args->login) + 1);
+        
+	base64encode(args->login, b64user);
+	(void)snprintf(message, BUFLEN,
+                       "GET /nic/update?hostname=%s&myip=%s"
+                       ,args->hostname, args->ipv4);
+        
+	if(args->ipv6) {
+		(void)strncat(message, "&myip6=", BUFFREE(message));
+		(void)strncat(message, args->ipv6, BUFFREE(message));
+	}
+        
+	{
+		char buffer[1024];
+                
+		(void)snprintf(buffer, 1024,
+                               " HTTP/1.1\r\n"
+                               "Host: %s\r\n"
+                               "Authorization: Basic %s\r\n"    //username:pass
+                               "User-Agent: %s %s - %s\r\n"
+                               "Connection: close\r\n"
+                               "Pragma: no-cache\r\n\r\n",
+                               DYNDNSHOST, b64user, PNAME, VERSION, HOMEPAGE);
+		(void)strncat(message, buffer, BUFLEN - 1 - strlen(message));
+	}
+	print_debug("\n\nMessage:"
+		    "\n--------------------------------------\n"
+		    "%s--------------------------------------\n\n",
+                    message);
+	
+	/* --------- SSL write --------- */
+	if (SSL_write(ssl, message, strlen(message)) == -1) {
+		ret_msg(PERR, "SingTel ddns: SSL_write() failed");
+		return RET_WARNING;
+	}
+
+	free(b64user);
+	return RET_OK;
+}
+
+static int
+check_server_msg(int s, const char *hostname)
+{
+        
+	int n;
+	char server_msg[BUFSIZE], *ptr;
+	char rtn_msg[BUFSIZE];
+        
+	(void)memset(server_msg, 0, sizeof(server_msg));
+	(void)memset(rtn_msg, 0, sizeof(rtn_msg));
+        
+	/* --------- SSL read --------- */
+	if(SSL_read(ssl, server_msg, sizeof(server_msg) - 1) < 0) {
+		ret_msg(PERR, "SingTel ddns: SSL_read failed");
+		return RET_WARNING;
+	}
+
+	//Workaroud to fix can not read Content field
+	if(SSL_read(ssl, rtn_msg, sizeof(rtn_msg) - 1) < 0) {
+		ret_msg(PERR, "SingTel ddns: SSL_read Content field failed");
+		return RET_WARNING;
+	}
+	if(strlen(rtn_msg) > 0)
+		strcat(server_msg, rtn_msg);
+
+	print_debug("\n\nServer message:"
+		    "\n--------------------------------------\n"
+		    "%s--------------------------------------\n\n",
+		    server_msg);
+
+	if(strstr(server_msg, "HTTP/1.1 200 OK") ||
+	   strstr(server_msg, "HTTP/1.0 200 OK")) {
+                
+		(void)strtok(server_msg, "\n");
+		while((ptr = strtok(NULL, "\n")) != NULL) {
+			for(n=0; return_codes[n].code != NULL; n++) {
+				if(strstr(ptr, return_codes[n].code)) {
+					ret_msg(NONE, "%s: %s",
+						DYNDNSHOST, return_codes[n].message);
+					if(return_codes[n].error == 1) {
+						return RET_ERROR;
+					} else {
+						return RET_OK;
+					}
+				}
+			}
+		}
+	} else if(strstr(server_msg, "401 Authorization Required")) {
+		ret_msg(NONE, "SingTel.com: wrong username or password");
+	} else {
+		(void)memset(rtn_msg, 0, sizeof(rtn_msg));
+		sscanf(server_msg, " HTTP/1.%*c %*3d %255[^\r\n]", rtn_msg);
+		ret_msg(NONE, "unknown return code: %s", rtn_msg);
+	}
+        
+	return RET_ERROR;
+}
